<h1>Listing flyers</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @flyers.each do |flyer| %>
  <tr>
    <td><%= flyer.title %></td>
    <td><%= flyer.description %></td>
    <td><%= link_to 'Show', flyer %></td>
    <td><%= link_to 'Edit', edit_flyer_path(flyer) %></td>
    <td><%= link_to 'Destroy', flyer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= link_to (image_tag asset_path("/assets/screenshot.png")), edit_flyer_path(flyer) %></td>
  </tr>
<% end %>
</table>

